@model Web.Models.PolicyHolder
@{
    ViewBag.Title = "Policy Holder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Policy Holder Details</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label for="Person" class="control-label col-md-2">Person</label>
        <div class="col-md-10"><a href="~/People/GetPerson/@Model.PersonId">@Model.PersonName</a></div>
    </div>

    <div class="form-group">
        <label for="Policy" class="control-label col-md-2">Policy</label>
        <div class="col-md-10"><a href="~/Policy/GetPolicy/@Model.PolicyId">@Model.PolicyName</a></div>
    </div>

    <div class="form-group">
        <label for="Active" class="control-label col-md-2">Active</label>
        <div class="col-md-10"><input type="checkbox" id="Active" checked="@Model.Active" disabled="disabled" /></div>
    </div>

    <div class="form-group">
        <label for="StartDate" class="control-label col-md-2">Start Date</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.StartDate) </div>
    </div>

    <div class="form-group">
        <label for="EndDate" class="control-label col-md-2">End Date</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.EndDate)</div>
    </div>

    <div class="form-group">
        <label for="Username" class="control-label col-md-2">Username</label>
        <div class="col-md-10">@Model.Username</div>
    </div>

    <div class="form-group">
        <label for="PolicyNumber" class="control-label col-md-2">Policy #</label>
        <div class="col-md-10">@Model.PolicyNumber</div>
    </div>

    <div class="form-group">
        <label for="FilePath" class="control-label col-md-2">File Path</label>
        <div class="col-md-10"><a href="@ViewBag.PolicyDocumentPath" target="_blank">@Model.FilePath</a></div>
    </div>

    <div class="form-group">
        <label for="PolicyAmount" class="control-label col-md-2">Policy Amount</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.PolicyAmount)</div>
    </div>

    <div class="form-group">
        <label for="Deductible" class="control-label col-md-2">Deductible</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.Deductible)</div>
    </div>

    <div class="form-group">
        <label for="OutOfPocketMax" class="control-label col-md-2">Out Of Pocket Max</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.OutOfPocketMax)</div>
    </div>

    <div class="form-group">
        <label for="EffectiveDate" class="control-label col-md-2">Effective Date</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.EffectiveDate)</div>
    </div>

    <div class="form-group">
        <label for="ExpirationDate" class="control-label col-md-2">Expiration Date</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.ExpirationDate)</div>
    </div>
</div>
