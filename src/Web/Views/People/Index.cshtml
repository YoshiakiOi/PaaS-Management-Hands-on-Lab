@model Web.Models.Person
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>People</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                City
            </th>
            <th>
                Suburb
            </th>
            <th>
                Postcode
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach(var person in ViewBag.People)
        {
            <tr>
                <td>@person.FName</td>
                <td>@person.LName</td>
                <td>@person.City</td>
                <td>@person.Suburb</td>
                <td>@person.Postcode</td>
                <td><a href="~/People/GetPerson/@person.Id">Details</a></td>
            </tr>
        }

    </tbody>
</table>

